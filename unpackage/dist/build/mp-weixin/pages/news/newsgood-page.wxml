<view><view class="top"><image src="{{topInfo.img_url}}"></image><text>{{topInfo.name}}</text></view><view class="common"><view class="common-item"><text data-event-opts="{{[['tap',[['selectCategory',['default']]]]]}}" class="{{[this.selectType==='default'?'select':'normal']}}" bindtap="__e">综合</text></view><view class="common-item"><text data-event-opts="{{[['tap',[['selectCategory',['price']]]]]}}" class="{{[this.selectType==='price'?'select':'normal']}}" bindtap="__e">价格</text><image src="{{this.img_price}}"></image></view><view class="common-item"><text data-event-opts="{{[['tap',[['selectCategory',['category']]]]]}}" class="{{[this.selectType==='category'?'select':'normal']}}" bindtap="__e">分类</text></view></view><view class="line"></view><view class="info"><view class="grid"><block wx:for="{{goodsInfo}}" wx:for-item="item" wx:for-index="index"><view><view data-event-opts="{{[['tap',[['openGoodDetail',['$0'],[[['goodsInfo','',index,'id']]]]]]]}}" class="good-item" bindtap="__e"><image src="{{item.list_pic_url}}"></image><text>{{item.name}}</text><text class="price">{{item.retail_price}}</text></view></view></block></view><view hidden="{{!(this.selectType==='category'&&this.showDialog?true:false)}}" class="dialog"><block wx:for="{{categoryList}}" wx:for-item="item" wx:for-index="index"><view class="{{[categoryId==item.id?'category_select':'category_normal']}}"><text data-event-opts="{{[['tap',[['categoryClick',['$0'],[[['categoryList','',index,'id']]]]]]]}}" class="{{[categoryId==item.id?'select':'normal']}}" bindtap="__e">{{item.name}}</text></view></block></view></view></view>